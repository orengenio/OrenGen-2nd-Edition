# ========================================
# ORENGEN.IO - TWENTY CRM CONFIGURATION
# ========================================

# Database
POSTGRES_PASSWORD=your_secure_password_here

# Application URLs
SERVER_URL=https://crm.orengen.io
FRONT_BASE_URL=https://crm.orengen.io

# Security Tokens - REQUIRED: Generate with: openssl rand -base64 32
ACCESS_TOKEN_SECRET=generate_random_32_char_secret
LOGIN_TOKEN_SECRET=generate_random_32_char_secret
REFRESH_TOKEN_SECRET=generate_random_32_char_secret
FILE_TOKEN_SECRET=generate_random_32_char_secret

# Branding
EMAIL_FROM_ADDRESS=noreply@orengen.io
EMAIL_FROM_NAME=OrenGen CRM

# ========================================
# INTEGRATIONS WITH ORENGEN ECOSYSTEM
# ========================================

# n8n Integration (your workflow automation)
N8N_WEBHOOK_URL=https://n8n.orengen.io/webhook
N8N_API_KEY=your_n8n_api_key_here

# Marketing Site Integration
MARKETING_SITE_URL=https://orengen.io

# API Configuration
ENABLE_API=true
API_RATE_LIMIT=1000

# ========================================
# OPTIONAL: EMAIL SMTP (for notifications)
# ========================================
# EMAIL_DRIVER=smtp
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-smtp-user
# EMAIL_SMTP_PASSWORD=your-smtp-password
# EMAIL_SMTP_SECURE=true

# ========================================
# OPTIONAL: TWILIO (for SMS/Voice from CRM)
# ========================================
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# OPTIONAL: OPENAI (for AI features)
# ========================================
# OPENAI_API_KEY=sk-your-openai-key

