{
  "name": "OrenGen CRM",
  "short_name": "OrenGen",
  "description": "B2B CRM with Lead Generation, Federal Contracting, and AI-Powered Automation",
  "start_url": "/dashboard",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#f97316",
  "orientation": "any",
  "scope": "/",
  "icons": [
