# ============================================
# OrenGen CRM Environment Variables
# ============================================

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/orengen_crm"

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRES_IN="7d"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ============================================
# AI Configuration
# ============================================

# Claude API (Anthropic)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY="sk-ant-api03-..."

# Gemini API (Google)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="AIza..."

# ============================================
# Lead Generation APIs
# ============================================

# ICANN CZDS (Centralized Zone Data Service)
# Apply at: https://czds.icann.org/
ICANN_CZDS_USERNAME="your_username"
ICANN_CZDS_PASSWORD="your_password"

# Whoxy API (WHOIS Lookup)
# Get from: https://www.whoxy.com/
WHOXY_API_KEY="your_whoxy_api_key"

# Hunter.io API (Email Finder)
# Get from: https://hunter.io/api
HUNTER_API_KEY="your_hunter_api_key"

# Snov.io API (Email Finder)
# Get from: https://snov.io/api
SNOV_API_KEY="your_snov_api_key"

# ============================================
# Email Configuration (Optional)
# ============================================

RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="noreply@orengen.io"

# ============================================
# Deployment Configuration (Optional)
# ============================================

# Vercel
VERCEL_API_TOKEN="your_vercel_token"

# Netlify
NETLIFY_API_TOKEN="your_netlify_token"

# Cloudflare
CLOUDFLARE_API_TOKEN="your_cloudflare_token"

# GitHub (for repo creation)
GITHUB_TOKEN="ghp_..."

# ============================================
# Security & Encryption
# ============================================

# Used for encrypting API keys in database
ENCRYPTION_KEY="your-32-character-encryption-key"

# ============================================
# Optional: Analytics & Monitoring
# ============================================

NEXT_PUBLIC_GA_ID=""
SENTRY_DSN=""
